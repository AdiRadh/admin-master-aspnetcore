        <div class="row">
            <div class="col-lg-12">
                <div class="rg-card-tabs">
                    <header>
                        <h5>Custom Elements</h5>
                    </header>
                    <section>
                        <form>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div>
                                        <h6>Custom Checkbox and Radio</h6>
                                    </div>
                                    <div class="form-group custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                                        <label class="custom-control-label" for="customCheck1">Check this custom checkbox</label>
                                    </div>
                                    <div class="form-group custom-control custom-radio">
                                        <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input">
                                        <label class="custom-control-label" for="customRadio1">Toggle this custom radio</label>
                                    </div>
                                    <div class="form-group custom-control custom-radio">
                                        <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input">
                                        <label class="custom-control-label" for="customRadio2">Or toggle this other custom radio</label>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div>
                                        <h6>Custom Checkbox and Radio</h6>
                                    </div>
                                    <div class="form-group custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="customSwitch1">
                                        <label class="custom-control-label" for="customSwitch1">Toggle this switch element</label>
                                    </div>
                                    <div class="form-group custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="customSwitch2" checked>
                                        <label class="custom-control-label" for="customSwitch2">Or toggle this switch element</label>
                                    </div>
                                    <div class="form-group custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="customSwitch3" disabled>
                                        <label class="custom-control-label" for="customSwitch3">Disabled switch element</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label for="customRange1">Custom slider slim</label>
                                    <input type="range" class="custom-range">
                                </div>
                                <div class="form-group col-lg-6">
                                    <label for="customRange1">Custom slider thick</label>
                                    <input type="range" class="custom-range thick-slider">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="formGroupExampleInput">Select Menu</label>
                                        <select class="custom-select">
                                    <option selected value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                  </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="formGroupExampleInput">File Browser</label>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input">
                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>

    </div>
