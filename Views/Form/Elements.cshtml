    <div>
        <div class="row">
            <div class="col-lg-6">
                <div class="rg-card-tabs equal-height">
                    <header>
                        <h5>Form Controls</h5>
                    </header>
                    <section>
                        <form>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email address</label>
                                <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Single select</label>
                                <select class="form-control">
                                  <option>1</option>
                                  <option>2</option>
                                  <option>3</option>
                                  <option>4</option>
                                  <option>5</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlSelect2">Multi select</label>
                                <select multiple class="form-control">
                                  <option>1</option>
                                  <option>2</option>
                                  <option>3</option>
                                  <option>4</option>
                                  <option>5</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">Text area</label>
                                <textarea class="form-control" rows="2" placeholder="Text area"></textarea>
                            </div>
                            <div class="form-group search-input">
                                    <input type="text" class="form-control" placeholder="Search" />
                                    <button class="btn" type="button">
                                        <span class="material-icons">search</span>
                                    </button>
                                </div>
                        </form>
                    </section>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="rg-card-tabs">
                    <header>
                        <h5>Sizing</h5>
                    </header>
                    <section>
                        <form>
                            <div class="form-group">
                                <input class="form-control form-control-lg" type="text" placeholder="Large">
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Default">
                            </div>
                            <div class="form-group">
                                <input class="form-control form-control-sm" type="text" placeholder="Small">
                            </div>
                            <div class="form-group sizing-buttons">
                                <button type="button" class="btn btn-primary btn-lg">Large</button>
                                <button type="button" class="btn btn-primary">Default</button>
                                <button type="button" class="btn btn-primary btn-sm">Small</button>
                            </div>
                        </form>
                    </section>
                </div>
                <div class="rg-card-tabs">
                    <header>
                        <h5>Disabled and Read only</h5>
                    </header>
                    <section>
                        <form>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input class="form-control" type="text" placeholder="Default" disabled>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="Readonly plain text">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <textarea class="form-control" rows="2" placeholder="Text area" disabled></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-lg-12">
                                    <select class="form-control" disabled>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                      </select>
                                </div>
                            </div>
                        </form>
                        <form>
                            <div class="form-row align-items-center">
                                <div class="col-lg-3">
                                    <button type="button" class="btn btn-secondary" disabled>Disabled</button>
                                </div>
                                
                                <div class="col-lg-3 custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="check1" disabled>
                                    <label class="custom-control-label" for="check1">Checkbox</label>
                                </div>
                                <div class="col-lg-3 custom-control custom-radio">
                                    <input type="radio" id="radio1" name="customRadio" class="custom-control-input" disabled>
                                    <label class="custom-control-label" for="radio1">Radio</label>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
